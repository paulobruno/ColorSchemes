  <!-- Configurações gerais -->
  <style 
name="current-line" 
background="cinza_escuro"
  /> <!-- Côr de frente/fundo da linha do cursor atual. -->
  <style 
name="cursor"
        foreground="amarelo" 
background="amarelo"
  /> <!-- Côr que do cursor piscando na linha atual. -->
  <style 
name="line-numbers"
foreground="cinza_fosco"
background="asfalto"
  /> <!-- Se ativar número de linhas, Côr de fundo e frente. -->
  <style 
name="secondary-cursor"
background="amarelo_claro"
  /> <!-- Côr de frente do cursor secundário. -->
  <style 
name="selection"
foreground="preto"
background="cinza_claro"
  /> <!-- Côr frente/fundo quando seleciona algum trecho na linha. -->
  <style 
name="selection-unfocused"
foreground="branco"
background="cinza"
  /> <!-- Côr frente/fundo de áreas selecionadas ou pesquisadas no texto. -->
  <style 
name="text"
foreground="branco"
background="preto"
  /> <!-- Côr do texto sendo digitado e outras áreas de texto. *sh*-->

